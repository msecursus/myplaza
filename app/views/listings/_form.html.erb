<%= form_for(@listing, html: { multipart: true }) do |f| %>
  <% if @listing.errors.any? %>

    <div id="error_explanation" class="alert alert-danger alert-dismissable alert-red">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times:</button>

      <h4><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="stripe-error" class="alert alert-red" style="display:none">
    <noscript>
      JavaScript is Disabled, Go to settings and Enable it. 
    </noscript>
  </div>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"form-control descr" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class:"form-control descr" %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class:"form-control descr" %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class:"form-control descr" %>
  </div>
  <h1>Bank Account Info</h1>
  <div class="form-group">
    <%= label_tag :country %>
    <%= text_field_tag :country, nil, { :name => nil, :'data-stripe' => "country", class:"form-control descr" } %>
  </div>
  <div class="form-group">
    <%= label_tag :routing_number %>
    <%= text_field_tag :routing_number, nil, { :name => nil, :'data-stripe' => "routingNumber", class:"form-control descr" } %>
  </div>
  <div class="form-group">
    <%= label_tag :account_number %>
    <%= text_field_tag :account_number, nil, { :name => nil, :'data-stripe' => "accountNumber", class:"form-control descr" } %>
  </div>
  <div class="form-group">
    <%= f.submit class:"btn btn-primary descr" %>
  </div>
<% end %>
