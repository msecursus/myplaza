<div class="jumbotron">
  <h1>Wereldse Produkten</h1>
  <h2>Ontdek Uniek</h2>
</div>

<div class="center">
  <p id="notice"><%= notice %></p>
  <div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
        
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <p><%= "Seller: #{listing.user.name}" %></p>
           
        </div>
      </div>
    </div>
  <% end %>  
  </div>
</div>
<br>
<% if (user_signed_in?) %>
  <%= link_to 'New Listing', new_listing_path, class:"btn btn-link" %>
<% end %>
