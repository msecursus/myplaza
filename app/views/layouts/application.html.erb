<!DOCTYPE html>
<html>
<head>
  <title>Mplace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
</head>
<body>
<%= render 'layouts/nav' %>

<div class="container">
<% if flash[:notice] %>

    <div id="flashy"><%= bootstrap_flash %></div>
        
<% end %>
<% if flash[:alert] %>

    <div id="flashydiv">
    	<%= bootstrap_flash %>
    	<p class="flashyp">Try Again</p>
    </div>
        
<% end %>

	<%= yield %>
</div>
<%= render 'layouts/foot' %>
</body>
</html>
